<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        style="@style/AlbumListCardView"
        app:cardCornerRadius="@dimen/cardView_cornerRadius">

        <LinearLayout
            android:id="@+id/typeOfAttraction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBlack">
            <ImageView
                android:id="@+id/typeOfSideAttractionImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/plans_image"
                android:elevation="@dimen/elevation"/>


            <TextView
                android:id="@+id/typeOfAttractionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>